<body class="bg-gray-100 font-sans leading-normal tracking-normal">
    <%- include('../../partials/sidebar') %>
        <!-- Main Content -->
        <div class="ml-64">
            <%- include('../../partials/header') %>
                <!-- Dashboard Content -->

                <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
                    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
                        <h1 class="text-gray-600 font-bold text-xl mb-3">Edit Product</h1>
                        <form action="" method="post">
                            <div class="grid grid-cols-2 items-center gap-3">
                                <div class="mb-4">
                                    <label class="block text-gray-700 text-sm font-medium mb-2" for="username">
                                        Product Name
                                    </label>
                                    <input
                                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                        id="name" name="name" type="text" value="<%=product.name %>"
                                        placeholder="Enter product name">
                                </div>
                                <div class="mb-4">
                                    <label class="block text-gray-700 text-sm font-medium mb-2" for="username">
                                        Product Description
                                    </label>
                                    <input
                                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                        id="description" name="description" type="text"
                                        value="<%=product.description %>" placeholder="Enter description">
                                </div>
                                <div class="mb-4">
                                    <label class="block text-gray-700 text-sm font-medium mb-2" for="username">
                                        Product Price
                                    </label>
                                    <input
                                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                        id="price" name="price" type="text" value="<%=product.price %>"
                                        placeholder="Enter price">
                                </div>

                                <div class="mb-4">
                                    <label class="block text-gray-700 text-sm font-medium mb-2" for="username">
                                        Sub Category
                                    </label>
                                    <select name="subCategoryId" id=""
                                        class="shadow  border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                                        <option value="">--Select Sub Category--</option>
                                        <% subCategories.forEach((subcategory,index)=>{ %>
                                            <option <%=String(product.subCategoryId)===String(subcategory._id)
                                                ? 'selected' : '' %>
                                                value="<%=subcategory._id%>">
                                                    <%=subcategory.name%>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>

                                <!-- <div class="mb-4">
                                    <label class="block text-gray-700 text-sm font-medium mb-2" for="username">
                                        Product Price
                                    </label>
                                    <input
                                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                        id="price" name="price" type="text" value="<%=product.name %>" placeholder="Enter price">
                                </div> -->


                            </div>

                            <div class="flex items-center justify-between">
                                <button
                                    class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                                    type="submit">
                                    Update
                                </button>
                            </div>

                        </form>
                    </div>
                </div>
        </div>
        </div>
</body>